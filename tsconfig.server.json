{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2020",
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": false,
    "types": ["node"],
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client",
    "client/**/*",
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ]
}
